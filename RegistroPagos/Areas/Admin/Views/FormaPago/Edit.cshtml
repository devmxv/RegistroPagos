@model RegistroPagos.Models.FormaPago
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<h2 class="text-info">Editar Categoría</h2>

<form method="post" asp-action="Edit">
    <div class="border">
        <div class="border pt-5 pl-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Descripcion" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Descripcion" class="form-control" />
                </div>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-5 offset-2">
                    <partial name="_BotonesEditarRegresar" model="Model.Id"/>
                </div>
            </div>
        </div>
    </div>
</form>

