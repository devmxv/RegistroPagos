@model IEnumerable<FormaPago>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<br />
<br />
<div class="container">
    <div class="row">
        <!--Title -->
        <div class="col-6">
            <h2 class="text-info">Formas de Pago</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_BotonCrear" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>
                        @Html.DisplayNameFor(m => m.Descripcion)
                    </th>
                    <th></th>
                    <th>Acciones</th>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.Descripcion)
                            </td>
                            <td>
                                <partial name="_BotonesAcciones" model="item.Id" />
                            </td>
                        </tr>
                    }
            </table>
        } else
        {
            <p>No hay formas de pago registradas.</p>
        }
    </div>
</div>
